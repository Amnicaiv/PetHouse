<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_conectarApi"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_weight="1"
        android:text="Conectar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_prueba_api" />

    <Button
        android:id="@+id/btn_conectarApi2"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:layout_weight="1"
        android:text="Conectar Google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_conectarApi" />

    <TextView
        android:id="@+id/tv_prueba_api"
        android:layout_width="163dp"
        android:layout_height="93dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/img_prueba_api"
        tools:layout_editor_absoluteX="124dp" />

    <ImageView
        android:id="@+id/img_prueba_api"
        android:layout_width="172dp"
        android:layout_height="154dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_house_24" />
</androidx.constraintlayout.widget.ConstraintLayout>