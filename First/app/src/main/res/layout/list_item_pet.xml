<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#70DA36">

    <ImageView
        android:id="@+id/id_item_PetImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24"
        tools:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/id_item_PetNombre"
        android:layout_width="155dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:background="#6D4CAF27"
        android:gravity="center_vertical"
        android:text="Nombre"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/id_item_PetImg"
        app:layout_constraintTop_toTopOf="@+id/id_item_PetImg" />

    <TextView
        android:id="@+id/id_item_PetRaza"
        android:layout_width="155dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:background="#6D4CAF27"
        android:gravity="center_vertical"
        android:text="Raza"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/id_item_PetImg"
        app:layout_constraintTop_toBottomOf="@+id/id_item_PetNombre" />

</androidx.constraintlayout.widget.ConstraintLayout>