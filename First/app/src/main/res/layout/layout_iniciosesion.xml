<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29708C">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="174dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:srcCompat="@mipmap/logo_largo2"
                tools:srcCompat="@mipmap/logo_largo2" />

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16pt"
                android:layout_marginLeft="16pt"
                android:layout_marginTop="68pt"
                android:layout_marginEnd="16pt"
                android:layout_marginRight="16pt"
                android:ems="15"
                android:fontFamily="sans-serif-light"
                android:hint="Nombre de Usuario"
                android:inputType="textPersonName"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_error_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:text="error"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16pt"
                android:layout_marginLeft="16pt"
                android:layout_marginTop="20pt"
                android:layout_marginEnd="16pt"
                android:layout_marginRight="16pt"
                android:ems="15"
                android:fontFamily="sans-serif-light"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_error_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:text="error"
                android:textColor="#FA4040"
                android:textSize="14sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bLogin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="260dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Iniciar sesión"
                android:textSize="30sp"
                app:backgroundTint="@color/teal_700"
                app:elevation="0dp"
                app:iconPadding="0dp" />

            <TextView
                android:id="@+id/lnk_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6pt"
                android:layout_marginLeft="6pt"
                android:layout_marginTop="12pt"
                android:layout_marginBottom="12pt"
                android:fontFamily="sans-serif-black"
                android:text="Aún no estoy registrado"
                android:textColor="#FAFAFA"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>