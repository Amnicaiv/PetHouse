<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29708C">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Regresar"
        android:textSize="24sp"
        app:backgroundTint="#FF6161"
        app:cornerRadius="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="307dp"
                android:layout_height="116dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/logo_largo2" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="382dp"
                android:layout_height="260dp"
                android:layout_marginTop="70dp"
                android:background="#D1D1D1"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:src="@android:drawable/divider_horizontal_dark"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView18"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                tools:src="@android:drawable/divider_horizontal_dark"
                tools:srcCompat="@android:drawable/divider_horizontal_dark" />

            <TextView
                android:id="@+id/tvDataGroup1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:padding="5dp"
                android:text="Informacion de Usuario"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView16" />

            <TextView
                android:id="@+id/tbEmailSignup"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/tb_templateEmail"
                android:inputType="textPersonName"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDataGroup1" />

            <TextView
                android:id="@+id/tbPasswordSignup"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbEmailSignup" />

            <TextView
                android:id="@+id/tbConfirmedPassword"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="@string/tb_templateConfirmPassword"
                android:inputType="text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbPasswordSignup" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>