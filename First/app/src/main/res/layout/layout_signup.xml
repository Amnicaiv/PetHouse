<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29708C">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Registrarme"
        android:textSize="28sp"
        app:backgroundTint="@color/teal_700"
        app:cornerRadius="0dp"
        app:elevation="0dp"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView9"
        android:layout_width="414dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginStart="20pt"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="20pt"
                android:layout_marginEnd="20pt"
                android:layout_marginRight="20pt"
                android:layout_marginBottom="50pt"
                app:srcCompat="@mipmap/logo_largo2" />

            <EditText
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:hint="Nombre(s)"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_apPaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:hint="Apellido Paterno"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_apPaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_apMaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:hint="Apellido Materno"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_apMaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:textColor="#F44336"
                tools:visibility="invisible" />


            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Fecha de Nacimiento"
                android:textSize="18sp" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spinner_dia"
                        android:layout_width="318dp"
                        android:layout_height="36dp"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:entries="@array/dias_array" />

                    <Spinner
                        android:id="@+id/spinner_mes"
                        android:layout_width="352dp"
                        android:layout_height="38dp"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:entries="@array/meses" />

                    <Spinner
                        android:id="@+id/spinner_anio"
                        android:layout_width="341dp"
                        android:layout_height="39dp"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:entries="@array/anios" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/tv_error_fechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="20pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:hint="Dirección"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/txt_noExt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="No. Ext"
                        android:inputType="textPersonName"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/txt_noInt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="No. Int"
                        android:inputType="textPersonName"
                        android:textSize="24sp" />
                </LinearLayout>
            </ScrollView>

            <EditText
                android:id="@+id/txt_codigoPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:hint="Código Postal"
                android:inputType="textPostalAddress"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_codigoPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="Ciudad"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_ciudad"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:entries="@array/ciudades"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/tv_error_ciudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:hint="Telefóno Celular"
                android:inputType="phone"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="20pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:hint="Nombre de Usuario"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_correoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:ems="10"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_correoElectronico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_contrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <EditText
                android:id="@+id/txt_confirmacionContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Repetir Contraseña"
                android:inputType="textPassword"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_error_confirmacionContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textColor="#F44336"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="30pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:text='Al presionar el botón "Registrarme", usted acepta los terminos y condiciones especificados por la asociación de miembros Pethouse, así como nuestra política de privacidad' />

            <TextView
                android:id="@+id/txt_error_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="40pt"
                android:layout_marginEnd="10pt"
                android:layout_marginRight="10pt"
                android:textColor="#F44336"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>